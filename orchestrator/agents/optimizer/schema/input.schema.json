{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schema/optimizer.input.json",
  "title": "OptimizerInput",
  "type": ["object", "string"],
  "description": "Workflow or plan to optimize. Provide either freeform text or a structured object.",
  "properties": {
    "workflowName": { "type": "string" },
    "goal": { "type": "string" },
    "text": { "type": "string" },
    "steps": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "actor": { "type": "string" },
          "tool": { "type": "string" },
          "frequency": { "type": "string" },
          "durationMinutes": { "type": "number" },
          "waitMinutes": { "type": "number" },
          "failureRate": { "type": "number", "minimum": 0, "maximum": 1 },
          "pain": { "type": "number", "minimum": 1, "maximum": 5 },
          "handoffs": { "type": "number", "minimum": 0 }
        },
        "required": ["name"],
        "additionalProperties": true
      }
    },
    "constraints": { "type": "object", "additionalProperties": true }
  },
  "additionalProperties": true
}
